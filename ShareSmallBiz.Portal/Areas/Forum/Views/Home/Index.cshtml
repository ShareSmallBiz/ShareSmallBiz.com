@model List<PostModel>
@{
    ViewData["Title"] = "Share Small Biz Forum";
}

    <!-- Hero Section -->
    <section class="bg-primary text-white text-center py-5">
        <div class="container">
            <h1 class="display-4">Welcome to Share Small Biz Forum</h1>
            <p class="lead">A community where small businesses support each other, collaborate, and grow together!</p>
        </div>
    </section>

    <!-- Features Section -->
    <section class="container my-5">
        <div class="row text-center">
            <div class="col-md-4">
                <i class="bi bi-people-fill text-primary display-4"></i>
                <h3 class="mt-3">Network & Connect</h3>
                <p>Engage with fellow entrepreneurs, share experiences, and collaborate on new opportunities.</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-megaphone-fill text-primary display-4"></i>
                <h3 class="mt-3">Promote Your Business</h3>
                <p>Gain visibility by sharing your content across the network and tapping into new audiences.</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-lightbulb-fill text-primary display-4"></i>
                <h3 class="mt-3">Learn & Grow</h3>
                <p>Access valuable business tips, case studies, and industry insights from experienced members.</p>
            </div>
        </div>
    </section>

    <!-- Recent Discussions -->
@await Html.PartialAsync("_postList", (List<PostModel>)Model)


    <!-- Call to Action -->
    <section class="bg-light text-center py-5">
        <div class="container">
            <h2>Join the Discussion</h2>
            <p class="lead">Get expert advice, collaborate with like-minded entrepreneurs, and take your business to the next level!</p>
            <a href="/Register" class="btn btn-success btn-lg"><i class="bi bi-pencil-square"></i> Sign Up Now</a>
        </div>
    </section>
