@model List<PostModel>

<section class="container my-5">
    <h2 class="text-center mb-4"><i class="bi bi-chat-dots-fill"></i> Recent Discussions</h2>

    @if (Model != null && Model.Any())
    {
        <div class="list-group">
            @foreach (var post in Model)
            {
                <a href="/Forum/Home/@post.Id/@post.Slug" class="list-group-item list-group-item-action">
                    <h5 class="mb-1">@post.Title</h5>
                    <p class="mb-1 text-muted">
                        Started by <strong>@(post?.Author?.UserName ?? "Unknown")</strong>
                        • @(post.PostViews) views
                    </p>
                    <small class="text-muted">
                        <i class="bi bi-clock"></i> @post.Published.ToString("MMM d, yyyy")
                    </small>
                </a>
            }
        </div>

        <div class="text-center mt-3">
            <a href="/Forum" class="btn btn-primary">
                <i class="bi bi-arrow-right-circle-fill"></i> View All Discussions
            </a>
        </div>
    }
    else
    {
        <p class="text-center text-muted">No posts available. Be the first to start a discussion!</p>
        <div class="text-center mt-3">
            <a href="/Forum/Create" class="btn btn-success">
                <i class="bi bi-pencil-square"></i> Start a New Discussion
            </a>
        </div>
    }
</section>
