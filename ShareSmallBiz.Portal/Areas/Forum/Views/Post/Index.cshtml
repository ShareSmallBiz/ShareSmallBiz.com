@model List<PostModel>

@{
    ViewData["Title"] = "Posts";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-file-post"></i> Posts</h2>
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> New Post</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="bi bi-info-circle"></i> No posts available.
        </div>
    }
    else
    {
        <table id="postsTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Published</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                    <tr>
                        <td>@post.Title</td>
                        <td>@post.Description</td>
                        <td>@post.Published.ToShortDateString()</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@post.Id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#postsTable').DataTable();
        });
    </script>
}
