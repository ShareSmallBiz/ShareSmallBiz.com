@using ShareSmallBiz.Portal.Data
@using ShareSmallBiz.Portal.Infrastructure.Models.ViewModels
@model List<UserModel>
@{
    ViewData["Title"] = "Users";
    List<string> roles = new List<string>();
    if (ViewBag.Roles != null)
    {
        roles = ViewBag.Roles as List<string>;
    }
    else
    {
        roles = new List<string>();
        foreach (var role in Enum.GetValues(typeof(Roles)))
        {
            roles.Add(role.ToString());
        }
    }


}

<h1>Users</h1>

<form method="get" asp-action="Index" class="mb-4">
    <div class="row g-2">
        <div class="col-md-3">
            <label for="emailConfirmed" class="form-label">Email Confirmed</label>
            <select id="emailConfirmed" name="emailConfirmed" class="form-select">
                <option value="">All</option>
                <option value="true">Confirmed</option>
                <option value="false">Not Confirmed</option>
            </select>
        </div>
        <div class="col-md-3">
            <label for="role" class="form-label">Role</label>
            <select id="role" name="role" class="form-select">
                <option value="">All</option>
                @foreach (var role in roles)
                {
                    <option value="@role">@role</option>
                }
            </select>
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-primary">Filter</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Reset</a>
        </div>
    </div>
</form>

<table id="displayTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Email Confirmed</th>
            <th>User Name</th>
            <th>Roles</th>
            <th>Is Locked</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td><a asp-controller="UserRoles" asp-action="Edit" asp-route-userId="@user.Id">@user.Email</a></td>
                <td>@user.IsEmailConfirmed</td>
                <td><a asp-controller="UserRoles" asp-action="Edit" asp-route-userId="@user.Id">@user.UserName</a></td>
                <td>
                    <a class="btn btn-primary-soft" asp-controller="UserRoles" asp-action="Manage" asp-route-userId="@user.Id">@string.Join(", ", user.Roles)</a>
                </td>
                <td>@user.IsLockedOut</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            $('#displayTable').DataTable({
                paging: false,
                scrollY: '50vh',
                scrollCollapse: true,
                stateSave: true,
                colReorder: {
                    realtime: true,
                    fixedColumnsLeft: 1,
                    fixedColumnsRight: 1
                }
            });

            // Persist filter values on reload
            const urlParams = new URLSearchParams(window.location.search);
            $('#emailConfirmed').val(urlParams.get('emailConfirmed'));
            $('#role').val(urlParams.get('role'));
        });
    </script>
}
