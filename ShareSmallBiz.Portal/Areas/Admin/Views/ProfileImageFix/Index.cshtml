@{
    ViewData["Title"] = "Profile Image Fix";
}

<div class="container-fluid py-4">
    <div class="d-sm-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Profile Image Fix</h1>
        <a asp-area="Admin" asp-controller="UserRoles" asp-action="Index" class="btn btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm me-1"></i> Back to Users
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Select User</h6>
        </div>
        <div class="card-body">
            <p class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i> This is a simplified profile image updater intended for fixing issues with profile images.
            </p>

            <div class="row">
                <div class="col-lg-6 mx-auto">
                    <form asp-action="Upload" method="get">
                        <div class="mb-3">
                            <label for="userId" class="form-label">Select User</label>
                            <select id="userId" name="userId" class="form-select" required>
                                <option value="">-- Select a User --</option>
                                @foreach (var user in ViewBag.Users)
                                {
                                    <option value="@user.Value">@user.Text</option>
                                }
                            </select>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-arrow-right me-1"></i> Continue
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>