@model ProfileImageUpdateModel
@{
    ViewData["Title"] = "Profile Image Updated";
}

<div class="container-fluid py-4">
    <div class="d-sm-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Profile Image Updated</h1>
        <div>
            <a asp-action="Index" class="btn btn-secondary shadow-sm me-2">
                <i class="fas fa-users fa-sm me-1"></i> Select Another User
            </a>
            <a asp-area="Admin" asp-controller="UserRoles" asp-action="Index" class="btn btn-primary shadow-sm">
                <i class="fas fa-arrow-left fa-sm me-1"></i> Back to Users
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow border-left-success mb-4">
                <div class="card-header py-3 bg-success text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-check-circle me-2"></i> Profile Image Updated Successfully
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="rounded-circle bg-success text-white d-inline-flex align-items-center justify-content-center mb-3"
                             style="width: 80px; height: 80px;">
                            <i class="fas fa-user-check fa-3x"></i>
                        </div>
                        <h4 class="mb-0">Profile Image Updated!</h4>
                        <p class="text-muted">The profile image for @Model.DisplayName has been successfully updated.</p>
                    </div>

                    <div class="row align-items-center">
                        <div class="col-md-6 text-center">
                            <h6>Updated Profile Image</h6>
                            @if (Model.HasProfilePicture)
                            {
                                <img src="@Model.ProfilePicturePreview" alt="Updated Profile" class="img-thumbnail rounded-circle"
                                     style="width: 200px; height: 200px; object-fit: cover;" />
                                <div class="mt-2 small text-muted">
                                    <strong>Type:</strong> @(Model.CurrentProfileImageType == "stored" ? "Stored Image" : "URL")
                                </div>
                            }
                            else
                            {
                                <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center mx-auto"
                                     style="width: 200px; height: 200px; font-size: 64px;">
                                    @(Model.DisplayName?.Substring(0, 1))
                                </div>
                                <div class="mt-2 small text-muted">
                                    <strong>No profile image (default avatar)</strong>
                                </div>
                            }
                        </div>

                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-header py-3 bg-light">
                                    <h6 class="m-0 font-weight-bold text-primary">
                                        <i class="fas fa-info-circle me-2"></i> User Information
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <table class="table table-sm">
                                        <tr>
                                            <th style="width: 100px;">Name:</th>
                                            <td>@Model.DisplayName</td>
                                        </tr>
                                        <tr>
                                            <th>Username:</th>
                                            <td>@Model.UserName</td>
                                        </tr>
                                        <tr>
                                            <th>Email:</th>
                                            <td>@Model.Email</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <a asp-action="SelectUser" asp-route-userId="@Model.UserId" class="btn btn-primary me-2">
                            <i class="fas fa-edit me-1"></i> Make Another Change
                        </a>
                        <a asp-area="Admin" asp-controller="UserRoles" asp-action="Edit" asp-route-userId="@Model.UserId" class="btn btn-info">
                            <i class="fas fa-user-edit me-1"></i> Edit Full Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>