@page
@model LoginModel
@{
    ViewData["Title"] = "ShareSmallBiz: Log in";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-center mb-3">Log in to Your Account</h2>
                    <p class="text-muted text-center mb-4">Access the ShareSmallBiz network and grow your business.</p>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email address</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 d-flex justify-content-between align-items-center">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label" asp-for="Input.RememberMe">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <div>
                                <a asp-page="./ForgotPassword" class="text-decoration-none">Forgot Password?</a>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right"></i> Log in
                            </button>
                        </div>
                    </form>

                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <hr class="my-4" />
                        <p class="text-center text-muted">Or log in with</p>
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-outline-secondary btn-lg" name="provider" value="@provider.Name" title="Log in using @provider.DisplayName">
                                        <i class="bi bi-box-arrow-in-right"></i> @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    }
                </div>
            </div>

            <div class="mt-4 text-center">
                <div class="border rounded bg-light p-3 shadow-sm">
                    <h5 class="mb-2">New to ShareSmallBiz?</h5>
                    <p class="text-muted mb-3">Join today and connect with other small business owners!</p>
                    <a asp-page="./Register" class="btn btn-success btn-lg w-100">
                        <i class="bi bi-person-plus"></i> Create an Account
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
