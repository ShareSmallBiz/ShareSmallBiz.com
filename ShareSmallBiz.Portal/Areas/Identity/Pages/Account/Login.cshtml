@page
@model LoginModel
@{
    ViewData["Title"] = "ShareSmallBiz: Log in";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h2>Log in to Your Account</h2>
                    <p class="text-muted">Access the ShareSmallBiz network and grow your business.</p>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="d-grid">
                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Log in</button>
                    </div>
                </form>
            </section>

            <!-- Call to Action for Registration -->
            <div class="mt-4 text-center border p-3 rounded bg-light">
                <h5>New to ShareSmallBiz?</h5>
                <p class="text-muted">Join today and connect with other small business owners!</p>
                <a asp-page="./Register" class="btn btn-success btn-lg w-100"><i class="bi bi-person-plus"></i> Create an Account</a>
            </div>
        </div>

        <div class="col-md-6 col-md-offset-2">
            <section>
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div class="mt-3">
                                <p class="text-center text-muted">Or log in with:</p>
                                <div class="d-grid gap-2">
                                    @foreach (var provider in Model.ExternalLogins)
                                    {
                                        <button type="submit" class="btn btn-outline-primary btn-lg" name="provider" value="@provider.Name" title="Log in using @provider.DisplayName">
                                            <i class="bi bi-box-arrow-in-right"></i> Log in with @provider.DisplayName
                                        </button>
                                    }
                                </div>
                            </div>
                        </form>
                    }
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
