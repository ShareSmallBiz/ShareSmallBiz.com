@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="container my-4">
    <h1 class="text-center mb-3">Manage Your Account</h1>

    <div class="d-flex flex-column flex-md-row">
        <!-- Navigation (On Top for Mobile, Side for Desktop) -->
        <div class="w-100 w-md-25 mb-3 mb-md-0">
            <partial name="_ManageNav" />
        </div>

        <!-- Content Area -->
        <div class="flex-grow-1">
            <h2 class="mb-3">Change Your Account Settings</h2>
            <hr />
            @RenderBody()
        </div>
    </div>
</div>

<!-- Fixed Footer Handling -->
<style>
    body {
        padding-bottom: 80px; /* Ensures content doesn’t get hidden behind the footer */
    }
</style>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
