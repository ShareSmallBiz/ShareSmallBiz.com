@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="container my-4">
    <h1 class="text-center mb-3">Manage Your Account</h1>

    <div class="d-flex flex-column flex-md-row">
        <!-- Navigation: Always on top in HTML & stacked on mobile -->
        <nav class="order-1 w-100 w-md-25 mb-3 mb-md-0">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-person-circle me-2"></i> Account Navigation
                </div>
                <div class="card-body p-2">
                    <partial name="_ManageNav" />
                </div>
            </div>
        </nav>
    </div>
    <!-- Content Area: Always below navigation -->
    <main class="order-2 flex-grow-1">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="mb-3"><i class="bi bi-gear-fill me-2"></i> Change Your Account Settings</h2>
                <hr />
                @RenderBody()
            </div>
        </div>
    </main>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
