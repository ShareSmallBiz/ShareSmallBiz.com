<!-- Features Section -->
<section class="py-5">
    <div class="container text-center">
        <h2>Why Join ShareSmallBiz?</h2>
        <p class="text-muted">A platform built for small businesses to connect, collaborate, and succeed.</p>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm p-4">
                    <i class="bi bi-megaphone fs-1 text-primary"></i>
