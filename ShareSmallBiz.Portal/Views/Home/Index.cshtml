@model List<DiscussionModel>

@{
    ViewData["Title"] = "Welcome to ShareSmallBiz.com";
}

<!-- Hero Section with Logo and Welcome Text -->
<section class="bg-primary text-white py-4 py-md-5">
    <div class="container">
        <div class="row g-4 align-items-center">
            <!-- Logo (Centered on mobile, Left on desktop) -->
            <div class="col-12 col-lg-4 text-center text-lg-start">
                <img src="~/img/ShareSmallBiz.svg" alt="Share Small Biz Logo" class="img-fluid" style="max-height: 120px;">
            </div>
            <!-- Text Content (Centered on mobile, Right on desktop) -->
            <div class="col-12 col-lg-8 text-center text-lg-start">
                <h1 class="display-5 fw-bold mb-3">Welcome to ShareSmallBiz.com</h1>
                <p class="lead mb-0">A community where small businesses support each other, collaborate, and grow together!</p>
            </div>
        </div>
    </div>
</section>

<!-- Features Section with Two Equal Cards -->
<section class="py-4 py-md-5">
    <div class="container">
        <div class="row g-4">
            <!-- Chat Feature Card -->
            <div class="col-12 col-md-6">
                <div class="card h-100 text-center border-0 shadow-sm">
                    <div class="card-body p-4 p-lg-5">
                        <div class="feature-icon bg-primary bg-gradient text-white mb-4 mx-auto rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="bi bi-chat-dots-fill fs-1"></i>
                        </div>
                        <h2 class="fs-3 fw-bold mb-3">AI Chat Agent</h2>
                        <p class="mb-4">Get expert advice, marketing tips, and business strategies with our AI-powered chat assistant designed for small business needs.</p>
                        <a href="/chat" class="btn btn-primary btn-lg mt-auto">
                            Try the Chat Agent <i class="bi bi-robot ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>
            <!-- Discussion Feature Card -->
            <div class="col-12 col-md-6">
                <div class="card h-100 text-center border-0 shadow-sm">
                    <div class="card-body p-4 p-lg-5">
                        <div class="feature-icon bg-primary bg-gradient text-white mb-4 mx-auto rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                            <i class="bi bi-people-fill fs-1"></i>
                        </div>
                        <h2 class="fs-3 fw-bold mb-3">Discussion Forum</h2>
                        <p class="mb-4">Connect with fellow entrepreneurs, share insights, ask questions, and collaborate on challenges facing small businesses today.</p>
                        <a href="/Discussions" class="btn btn-primary btn-lg mt-auto">
                            Join The Discussion <i class="bi bi-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="container-fluid py-3">
    @await Html.PartialAsync("_postList", Model)
</section>

<section class="container-fluid py-3">
    <div class="alert alert-info shadow-sm text-center fade show d-flex align-items-center justify-content-center flex-column" role="alert">
        <h5 class="alert-heading mb-2">
            <i class="bi bi-info-circle me-2"></i> Beta Version - Under Development
        </h5>
        <p class="mb-2 small">
            We're actively improving the site. <strong>Your feedback</strong> and <strong>patience</strong> are greatly appreciated!
        </p>
        <small class="text-muted">
            <i class="bi bi-clock-history"></i> This is an early release—expect updates!
        </small>
    </div>
</section>

@if (User.Identity.IsAuthenticated)
{
}
