@model ShareSmallBiz.Portal.Infrastructure.Services.UserModel

@{
    ViewData["Title"] = "Profile - " + Model.DisplayName;
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded">
        <div class="card-body text-center">
            <div class="position-relative">
                @if (Model.ProfilePicture != null)
                {
                    <img id="profilePicture" class="img-fluid rounded-circle shadow-lg"
                         style="width: 200px; height: 200px; object-fit: cover;"
                         src="data:image/*;base64,@(Convert.ToBase64String(Model.ProfilePicture))">
                }
                else
                {
                    <img id="profilePicture" class="img-fluid rounded-circle shadow-lg"
                         style="width: 200px; height: 200px; object-fit: cover;"
                         src="https://via.placeholder.com/200?text=Profile">
                }
            </div>
            <h2 class="card-title">@Model.DisplayName</h2>
            @if (!string.IsNullOrEmpty(Model.Bio))
            {
                <p class="card-text">@Model.Bio</p>
            }
            <div class="d-flex justify-content-center mt-3">
                <span class="me-3"><i class="bi bi-pencil-square"></i> @Model.PostCount Posts</span>
                <span><i class="bi bi-hand-thumbs-up"></i> @Model.LikeCount Likes</span>
            </div>
        </div>
    </div>
</div>

<!-- Include User Posts -->
<h3 class="mt-5"><i class="bi bi-journal-text"></i>Discussions</h3>


