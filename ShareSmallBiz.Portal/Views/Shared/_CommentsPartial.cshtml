@model IEnumerable<PostCommentModel>

@foreach (var comment in Model)
{
    <div id="comment-@comment.Id" class="mb-2">
        <div class="list-group-item py-2">
            <div class="d-flex align-items-start">
                @if (comment?.Author?.ProfilePicture != null)
                {
                    <img class="rounded-circle me-2 flex-shrink-0" style="width: 36px; height: 36px; object-fit: cover;"
                         src="data:image/*;base64,@(Convert.ToBase64String(comment.Author.ProfilePicture))" alt="User Profile" />
                }
                else
                {
                    <i class="bi bi-person-circle fs-3 text-secondary me-2"></i>
                }
                <div class="flex-grow-1">
                    <div class="d-flex justify-content-between">
                        <strong class="text-truncate">@(comment.Author?.UserName ?? "Anonymous")</strong>
                        <small class="text-muted"><i class="bi bi-clock"></i> @comment.CreatedDate.ToString("MMM d, yyyy")</small>
                    </div>
                    <p class="small text-muted mb-1">@comment.Content</p>
                </div>
            </div>
        </div>
        @if (User.Identity.IsAuthenticated && comment.Author.UserName == User.Identity.Name)
        {
            <button class="btn btn-outline-danger btn-sm delete-comment" data-comment-id="@comment.Id">
                <i class="bi bi-trash"></i>
            </button>
        }
    </div>
}
