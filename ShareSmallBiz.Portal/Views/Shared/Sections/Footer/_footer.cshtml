@using Microsoft.AspNetCore.Http
@using ShareSmallBiz.Portal.Models
@inject IHttpContextAccessor HttpContextAccessor
@{
    var currentYear = DateTime.UtcNow.Year.ToString();
    var status = new ApplicationStatus(System.Reflection.Assembly.GetExecutingAssembly());
    var request = HttpContextAccessor.HttpContext.Request;
    var canonicalUrl = $"{request.Scheme}://{request.Host}{request.Path}{request.QueryString}";
}

<footer class="footer fixed-bottom bg-light shadow-sm py-2">
    <div class="container text-center">
        <div class="d-flex justify-content-between align-items-center flex-wrap">
            <!-- Social Icons -->
            <div class="d-flex gap-2">
                <a href="https://www.linkedin.com/in/sharesmallbiz/" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-linkedin"></i>
                </a>
                <a href="https://github.com/sharesmallbiz/" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-github"></i>
                </a>
                <a href="https://stackoverflow.com/users/479571/sharesmallbiz" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-stack-overflow"></i>
                </a>
                <a href="https://www.instagram.com/sharesmallbiz" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-instagram"></i>
                </a>
                <a href="https://www.youtube.com/c/sharesmallbiz" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-youtube"></i>
                </a>
            </div>

            <!-- Copyright & Expandable Sections -->
            <div>
                <small>&copy; 2025-@currentYear <a href="https://sharesmallbiz.com" class="text-decoration-none">ShareSmallBiz.com</a></small>
            </div>

            <!-- Expandable Links & Version -->
            <div>
                <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#footerDetails" aria-expanded="false">
                    More <i class="bi bi-chevron-down"></i>
                </button>
            </div>
        </div>

        <!-- Collapsible Section for Privacy, Terms & Version -->
        <div class="collapse mt-2" id="footerDetails">
            <div class="d-flex flex-column align-items-center gap-1">
                <a href="/home/privacy" class="text-decoration-none small">Privacy Policy</a>
                <a href="/home/terms" class="text-decoration-none small">Terms & Conditions</a>
                <span class="small text-muted">Version @status.BuildVersion.ToString()</span>
            </div>
        </div>
    </div>
</footer>

